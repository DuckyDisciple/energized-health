{
  "include": ["ui/src", "./types"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "animation": ["./src/animation"],
      "animation*": ["./src/animation*"],
      "components": ["./src/components"],
      "components*": ["./src/components*"],
      "figures": ["./src/figures"],
      "figures*": ["./src/figures*"],
      "global": ["./src/global"],
      "global*": ["./src/global*"],
      "hooks": ["./src/hooks"],
      "hooks*": ["./src/hooks*"],
      "images":["./src/images"],
      "images*":["./src/images*"],
      "utilities": ["./src/utilities"],
      "utilities*": ["./src/utilities*"]
    },
    "types": ["vite/client"],
    "noEmit": true,
    /* Additional Options */
    "strictNullChecks": true,
    "noEmitOnError": false,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "importsNotUsedAsValues": "error",
    "noImplicitAny": false
  }
}
